<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">
    <Gallery
        android:id="@+id/gallery"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"/>

    <LinearLayout
        android:id="@+id/layout_txt"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_embellish"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="@string/embellish"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/textview_camera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:text="相机"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_weight="1"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/textview_album"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="相册"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:id="@+id/textview_stick"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:text="贴纸"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/textview_imgfilter"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="滤镜"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>
        <TextView
            android:id="@+id/textview_imgpreview"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:text="预览"
            android:textSize="20sp"
            android:gravity="center"
            android:background="@android:color/darker_gray"
            android:layout_marginTop="5dp"/>
        </LinearLayout>


</RelativeLayout>
